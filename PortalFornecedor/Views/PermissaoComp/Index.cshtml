@{
    ViewBag.Title = "Permissões dos Componentes";
}

<div class="row">
    <div class="col-lg-12">
        <div id="dvTabelaPrincipal" class="box">
            <div class="box-body">
                <div style="margin: 0 0 1em 0;overflow: hidden; text-align:left;">
                    <button id="btnNovo" class="btn btn-sm btn-success" style="margin-right: 10px;" type="button">
                        <i class="glyphicon glyphicon-plus visible-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">Novo item</label>
                    </button>
                    <button id="btnExportarExcel" class="btn btn-sm btn-primary" type="button">
                        <i class="fa fa-file-excel-o visible-xs"></i>
                        <i class="fa fa-file-excel-o hidden-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">&nbsp;&nbsp;Exportar para Excel</label>
                    </button>
                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tabelaPrincipal">
                        <thead>
                            <tr>
                                <th>Grupo</th>
                                <th>Formulário</th>
                                <th>Status</th>
                                <th>Componente</th>
                                <th>Tipo</th>
                                <th style="text-align: center;">Ações</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="dvFormCadastro" class="box" style="display:none;">
            <div class="box-body">
                <form id="formCadastro" action="#">
                    <div class="row">
                        <div id="dvNomeGrupo" class="form-group col-lg-6">
                            <label>Grupo:</label>
                            <select id="nomeGrupo" name="nomeGrupo" class="form-control"></select>
                        </div>
                        <div id="dvNomeGrupoLeitura" class="form-group col-lg-6" style="display: none;">
                            <label>Grupo:</label>
                            <div id="nomeGrupoLeitura"></div>
                        </div>
                        <div id="dvFormulario" class="form-group col-lg-6">
                            <label>Formulário:</label>
                            <select id="idFormulario" name="idFormulario" class="form-control"></select>
                        </div>
                        <div id="dvFormularioLeitura" class="form-group col-lg-6" style="display: none;">
                            <label>Formulário:</label>
                            <div id="idFormularioLeitura"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div id="dvStatus" class="form-group col-lg-6">
                            <label>Status:</label>
                            <select id="idStatus" name="idStatus" class="form-control"></select>
                        </div>
                        <div id="dvStatusLeitura" class="form-group col-lg-6" style="display: none;">
                            <label>Status:</label>
                            <div id="idStatusLeitura"></div>
                        </div>
                        <div id="dvComponente" class="form-group col-lg-6">
                            <label>Componente:</label>
                            <select id="idComponente" name="idComponente" class="form-control"></select>
                        </div>
                        <div id="dvComponenteLeitura" class="form-group col-lg-6" style="display: none;">
                            <label>Componente:</label>
                            <div id="idComponenteLeitura"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Tipo:</label>
                            <select id="idTipo" name="idTipo" class="form-control">
                                <option value="" selected="selected">Informe o tipo</option>
                                <option value="1" selected="selected">Oculto</option>
                                <option value="2" selected="selected">Escrita</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12" style="text-align:right;">
                            <button id="btnSalvar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar</label>
                            </button>
                            <button id="btnSalvarContinuar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar e Continuar</label>
                            </button>
                            <button id="btnCancelar" class="btn btn-sm btn-danger" type="button">
                                <i class="glyphicon glyphicon-remove visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Cancelar</label>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="@Url.Content("~/Scripts/custom/permissao-comp.js")"></script>
}