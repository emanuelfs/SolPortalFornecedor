@{
    ViewBag.Title = "Status do Formulário";
}

<div class="row">
    <div class="col-lg-12">
        <div id="dvTabelaPrincipal" class="box">
            <div class="box-body">
                <div style="margin: 0 0 1em 0;overflow: hidden; text-align:left;">
                    <button id="btnNovo" class="btn btn-sm btn-success" style="margin-right: 10px;" type="button">
                        <i class="glyphicon glyphicon-plus visible-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">Novo item</label>
                    </button>
                    <button id="btnExportarExcel" class="btn btn-sm btn-primary" type="button">
                        <i class="fa fa-file-excel-o visible-xs"></i>
                        <i class="fa fa-file-excel-o hidden-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">&nbsp;&nbsp;Exportar para Excel</label>
                    </button>
                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tabelaPrincipal">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Formulário</th>
                                <th>Inicial?</th>
                                <th>De Retorno?</th>
                                <th>Enviar Email?</th>
                                <th style="text-align: center;">Ações</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="dvFormCadastro" class="box" style="display:none;">
            <div class="box-body">
                <form id="formCadastro" action="#">
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <label>Status Inicial?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="statusInicial" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="statusInicial" value="0"> N&atilde;o
                            </label>
                        </div>
                        <div class="form-group col-lg-4">
                            <label>Status de Retorno?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="statusRetorno" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="statusRetorno" value="0"> N&atilde;o
                            </label>
                        </div>
                        <div class="form-group col-lg-4">
                            <label>Enviar Email?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="enviarEmail" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="enviarEmail" value="0"> N&atilde;o
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Nome:</label>
                            <input id="nomeStatus" name="nomeStatus" class="form-control" placeholder="Informe o nome" maxlength="50">
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Formulário:</label>
                            <select id="idFormulario" name="idFormulario" class="form-control"></select>
                        </div>
                    </div>
                    <div id="dvDadosEmail" class="row" style="display: none;">
                        <div class="form-group col-lg-6">
                            <label>Título do Email:</label>
                            <input id="tituloEmail" name="tituloEmail" class="form-control" placeholder="Informe o título do email" maxlength="50">
                        </div>
                        <div class="form-group col-lg-12">
                            <label>Corpo do Email:</label>
                            <textarea id="corpoEmail" name="corpoEmail" class="form-control" style="height: 80px; resize: none;" placeholder="Informe o corpo do email" maxlength="500"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12" style="text-align:right;">
                            <button id="btnSalvar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar</label>
                            </button>
                            <button id="btnSalvarContinuar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar e Continuar</label>
                            </button>
                            <button id="btnCancelar" class="btn btn-sm btn-danger" type="button">
                                <i class="glyphicon glyphicon-remove visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Cancelar</label>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="@Url.Content("~/Scripts/custom/status-formularios.js")"></script>
}