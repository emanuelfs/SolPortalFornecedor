@{
    ViewBag.Title = "Componentes";
}
<div class="row">
    <div class="col-lg-12">
        <div id="dvTabelaPrincipal" class="box">
            <div class="box-body">
                <div style="margin: 0 0 1em 0;overflow: hidden; text-align:left;">
                    <button id="btnNovo" class="btn btn-sm btn-success" style="margin-right: 10px;" type="button">
                        <i class="glyphicon glyphicon-plus visible-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">Novo item</label>
                    </button>
                    <button id="btnExportarExcel" class="btn btn-sm btn-primary" type="button">
                        <i class="fa fa-file-excel-o visible-xs"></i>
                        <i class="fa fa-file-excel-o hidden-xs"></i>
                        <label class="hidden-xs" style="margin:0px;">&nbsp;&nbsp;Exportar para Excel</label>
                    </button>
                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="tabelaPrincipal">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Tipo</th>
                                <th>Formulário</th>
                                <th>Lista</th>
                                <th style="text-align: center;">Ações</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="dvFormCadastro" class="box" style="display:none;">
            <div class="box-body">
                <form id="formCadastro" action="#">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Obrigatório?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="obrigaComponente" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="obrigaComponente" value="0"> N&atilde;o
                            </label>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Exibir na Listagem?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="exibirComponenteNoGrid" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="exibirComponenteNoGrid" value="0"> N&atilde;o
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Exibir no Lançamento?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="exibirComponenteNoLancamento" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="exibirComponenteNoLancamento" value="0"> N&atilde;o
                            </label>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Exibir no Atendimento?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="exibirComponenteNoAtendimento" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="exibirComponenteNoAtendimento" value="0"> N&atilde;o
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label>Exibir na Busca Avançada?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="exibirComponenteNaBuscaAvancada" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="exibirComponenteNaBuscaAvancada" value="0"> N&atilde;o
                            </label>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Caixa Alta?</label>
                            <br />
                            <label class="radio-inline">
                                <input type="radio" name="caixaAlta" value="1"> Sim
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="caixaAlta" value="0"> N&atilde;o
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div id="dvNomeComponente" class="form-group col-lg-6">
                            <label>Nome:</label>
                            <input id="nomeComponente" name="nomeComponente" class="form-control" placeholder="Informe o nome" maxlength="50">
                        </div>
                        <div id="dvNomeComponenteLeitura" class="form-group col-lg-6" style="display: none;">
                            <label>Nome:</label>
                            <p id="nomeComponenteLeitura"></p>
                        </div>
                        <div id="dvDescricaoComponente" class="form-group col-lg-6">
                            <label>Descrição:</label>
                            <input id="descricaoComponente" name="descricaoComponente" class="form-control" placeholder="Informe a descrição" maxlength="50">
                        </div>
                        <div id="dvDescricaoComponenteLeitura" class="form-group col-lg-6" style="display: none;">
                            <label>Descrição:</label>
                            <p id="descricaoComponenteLeitura"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div id="dvIdFormulario" class="form-group col-lg-6">
                            <label>Formulário:</label>
                            <select id="idFormulario" name="idFormulario" class="form-control"></select>
                        </div>
                        <div id="dvNomeFormulario" class="form-group col-lg-6" style="display: none;">
                            <label>Formulário:</label>
                            <p id="nomeFormulario"></p>
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Ordem:</label>
                            <input id="ordemComponente" name="ordemComponente" class="form-control" placeholder="Informe a ordem" maxlength="50">
                        </div>
                    </div>
                    <div class="row">
                        <div id="dvIdTipoComponente" class="form-group col-lg-6" style="display: none;">
                            <label>Tipo:</label>
                            <select id="idTipoComponente" name="idTipoComponente" class="form-control"></select>
                        </div>
                        <div id="dvNomeTipoComponente" class="form-group col-lg-6">
                            <label>Tipo:</label>
                            <p id="nomeTipoComponente"></p>
                        </div>
                        <div id="dvTipoLista" class="form-group col-lg-6" style="display: none;">
                            <label>Lista:</label>
                            <select id="idTipoLista" name="idTipoLista" class="form-control"></select>
                        </div>
                        <div id="dvNomeTipoLista" class="form-group col-lg-6" style="display: none;">
                            <label>Lista:</label>
                            <p id="nomeTipoLista"></p>
                        </div>
                        <div id="dvTamanhoComponente" class="form-group col-lg-6" style="display: none;">
                            <label>Tamanho:</label>
                            <input id="tamanhoComponente" name="tamanhoComponente" class="form-control" placeholder="Informe o tamanho" maxlength="50">
                        </div>
                        <div id="dvTamanhoComponenteLeitura" class="form-group col-lg-6" style="display: none;">
                            <label>Tamanho:</label>
                            <p id="tamanhoComponenteLeitura"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div id="dvTipoValorComponente" class="form-group col-lg-6" style="display: none;">
                            <label>Valor:</label>
                            <select id="idTipoValorComponente" name="idTipoValorComponente" class="form-control"></select>
                        </div>
                        <div id="dvNomeTipoValorComponente" class="form-group col-lg-6" style="display: none;">
                            <label>Valor:</label>
                            <p id="nomeTipoValorComponente"></p>
                        </div>
                        <div id="dvMascara" class="form-group col-lg-6" style="display: none;">
                            <label>Máscara:</label>
                            <select id="idMascara" name="idMascara" class="form-control"></select>
                        </div>
                        <div id="dvNomeMascara" class="form-group col-lg-6" style="display: none;">
                            <label>Máscara:</label>
                            <p id="nomeMascara"></p>
                        </div>
                        <div id="dvValidador" class="form-group col-lg-6" style="display: none;">
                            <label>Validador:</label>
                            <select id="idValidador" name="idValidador" class="form-control"></select>
                        </div>
                        <div id="dvNomeValidador" class="form-group col-lg-6" style="display: none;">
                            <label>Validador:</label>
                            <p id="nomeValidador"></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-12" style="text-align:right;">
                            <button id="btnSalvar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar</label>
                            </button>
                            <button id="btnSalvarContinuar" class="btn btn-sm btn-success" style="margin-right:5px;" type="button">
                                <i class="glyphicon glyphicon-floppy-disk visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Salvar e Continuar</label>
                            </button>
                            <button id="btnCancelar" class="btn btn-sm btn-danger" type="button">
                                <i class="glyphicon glyphicon-remove visible-xs"></i>
                                <label class="hidden-xs" style="margin:0px;">Cancelar</label>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="@Url.Content("~/Scripts/custom/componentes.js")"></script>
}