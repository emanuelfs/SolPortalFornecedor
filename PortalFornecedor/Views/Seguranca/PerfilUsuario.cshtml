@{
    ViewBag.Title = "Perfil do Usuário";

    CencosudCSCWEBMVC.Models.TO.Usuario usuarioLogado
    = CencosudCSCWEBMVC.Controllers.SegurancaController.UsuarioLogado;
    if (usuarioLogado != null)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Login:</label>
                                <br />@usuarioLogado.USER_NAME
                            </div>
                            <div class="col-lg-6">
                                <label>Nome:</label>
                                <br />@usuarioLogado.NOME
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Loja:</label>
                                <br />@usuarioLogado.LOJA
                            </div>
                            <div class="col-lg-6">
                                <label>Grupos:</label>
                                @{
                                    WriteLiteral(usuarioLogado.MontarGruposPerfil());
                                }
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Permissões:</label>
                                @{
                                    WriteLiteral(usuarioLogado.MontarPermissoesPerfil());
                                }
                            </div>
                            <div class="col-lg-6">
                                <label>Permissões (Status):</label>
                                @{
                                    WriteLiteral(usuarioLogado.MontarPermissoesStatusPerfil());
                                }
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Permissões (Componentes):</label>
                                @{
                                    WriteLiteral(usuarioLogado.MontarPermissoesComponentesPerfil());
                                }
                            </div>
                            <div class="col-lg-6">
                                <label>Permissões (Exibições):</label>
                                @{
                                    WriteLiteral(usuarioLogado.MontarPermissoesExibicoesPerfil());
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                                    }
}